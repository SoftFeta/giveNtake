#collapsingNavbar.collapse.navbar-toggleable-xs(ng-controller='mvNavbarController')
    ul.nav.navbar-nav.pull-right(ng-hide="identity.isAuthenticated()")
        li.nav-item
            a.nav-link(href='./register')
                i.fa.fa-user-plus.fa-lg
                |  Sign Up
        li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-toggle='dropdown', href='#', role='button')
                i.fa.fa-sign-in.fa-lg
                |  Log in
            #loginFrame.dropdown-menu.dropdown-menu-right
                a.dropdown-item
                    form#formLogin.form-group(style='width: 400px')
                        .input-group
                            .input-group-addon
                                i.fa.fa-user.fa-fw
                            input#username.form-control(ng-model="username", style="margin:0%", name='username', type='text', placeholder='User name')
                        br
                        .input-group
                            .input-group-addon
                                i.fa.fa-key.fa-fw
                            input#password.form-control(ng-model="password", style="margin:0%", name='password', type='password', placeholder='Password')
                        br
                        button#btnLogin.btn.btn-primary(ng-click='signIn(username, password)', type='button') Login
                        div(style='opacity: 0') weAreNotFoieGras123
    ul.nav.navbar-nav.pull-right(ng-show="identity.isAuthenticated()")
        li.nav-item
            #thumbs.thumbnail.nav-link
                img(src='avatar-display.png', alt='30x30', style='width: 30px; height: 30px;')
                |  {{greet()}},
                strong  {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
                | .
        li.nav-item
            .nav-link
                strong EN
        li.nav-item
            .nav-link |
        li.nav-item
            a.nav-link(href='#') 中文
        li.nav-item
            a.nav-link(href='#')
                i.fa.fa-sign-out.fa-lg
                |  Log out
        li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-toggle='dropdown', href='#', role='button')
                i.fa.fa-cog.fa-lg.fa-spin
                |  Settings
            .dropdown-menu.dropdown-menu-right
                a.dropdown-item(href='#') Profile settings
                a.dropdown-item(href='#') Donate/Receive records
                .dropdown-divider
                a.dropdown-item(href='#') Help