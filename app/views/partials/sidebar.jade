html
    body
        #sidebar.col-md-4.col-lg-3.sidebar-offcanvas(role='navigation')
            .card.card-inverse(style='background-color: #333; border-color: #333;')
                .card-block
                    h3.card-title
                        i.fa.fa-search
                        |  Advanced search
                    .checkbox.card-text
                        label
                            input(type='checkbox', value='', checked='checked')
                            i.fa.fa-keyboard-o.fa-fw
                            |  Search by keyword or #hashtag
                        input.form-control(type='search', placeholder='Insert keywords or hashtag...')
                    .checkbox.card-text
                        label
                            input(type='checkbox', value='', checked='checked')
                            i.fa.fa-sitemap.fa-fw
                            |  Search by category
