                                            a(href='#', ng-click="highlightString('#'+subsubcat_1.tag)") {{subsubcat_1.title}}
                                #headingTwo.card-header(role='tab', style='background-color:lemonchiffon;')
                                    a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapseTwo', aria-expanded='false', aria-controls='collapseTwo', ng-click="turn('#chevron2')")
