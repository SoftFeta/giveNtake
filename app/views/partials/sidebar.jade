                                        i.fa.fa-book.fa-fw
                                        |                                 Books and Periodicals
                                #collapseTwo.card-block.collapse.accordion_item_correction(role='tabpanel', aria-labelledby='headingTwo')
                                    div(ng-repeat='subsubcat in subcat_2')
                                        .card-header.others(role='tab', id='{{subsubcat.tag}}')
                                            a(href='#', ng-click="highlightString('#'+subsubcat.tag)") {{subsubcat.title}}
                                #headingThree.card-header.others(role='tab')
                                    a.collapsed.accordion_standalone(data-toggle='collapse', data-parent='#accordion', href='#', ng-click="highlightString('#headingThree')")
                                        i.fa.fa-ticket.fa-fw
                                        |  Coupons
                                #headingFour.card-header.others(role='tab')
                                    a.collapsed.accordion_standalone(data-toggle='collapse', data-parent='#accordion', href='#', ng-click="highlightString('#headingFour')")
                                        i.fa.fa-puzzle-piece.fa-fw
                                        |  Toys
                                #headingFive.card-header.others(role='tab')
                                    a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapseFive', aria-expanded='false', aria-controls='collapseFive', ng-click="turn('#chevron5')")
                                        i#chevron5.fa.fa-chevron-right.fa-lg
                                        i.fa.fa-music.fa-fw
                                        |  Music
                                #collapseFive.card-block.collapse.accordion_item_correction(role='tabpanel', aria-labelledby='headingFive')
                                    div(ng-repeat='cat in subcat_5')
