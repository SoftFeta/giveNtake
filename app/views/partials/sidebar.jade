                            .card
                                #headingOne.card-header(role='tab', style='background-color:lemonchiffon;')
                                    a(data-toggle='collapse', data-parent='#accordion', aria-expanded='true', aria-controls='collapseOne', href='#collapseOne', ng-click="turn('#chevron1')")
